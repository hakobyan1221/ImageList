<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.test.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/toHomeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/toSignUpFragment"
            app:destination="@id/signUpFragment"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@animator/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.test.ui.login.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/toHomeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.test.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/toImageDetailsFragment"
            app:destination="@id/imageDetailsFragment"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@animator/nav_default_exit_anim">
            <argument
                android:name="imageDetails"
                app:argType="com.test.imagelistapp.domain.ImageViewData" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/imageDetailsFragment"
        android:name="com.test.ui.home.ImageDetailsFragment"
        tools:layout="@layout/fragment_image_details">
        <argument
            android:name="imageDetails"
            app:argType="com.test.imagelistapp.domain.ImageViewData" />
    </fragment>
</navigation>
